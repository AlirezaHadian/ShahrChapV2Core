@page
@model ShahrChap.Web.Pages.Admin.Roles.IndexModel
@{
    ViewData["Title"] = "لیست نقش ها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست نقش های سایت</h1>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row">
                            <div class="col-md-12" style="margin-bottom:1rem">
                                <a asp-page="CreateRole" class="btn btn-outline btn-success"><i class="uil uil-shield-plus"></i> افزودن نقش جدید</a>
                            </div>
                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info" style="text-align:center;vertical-align:central;">
                            <thead>
                                <tr>
                                    <td>عنوان نقش</td>
                                    <td>دستورات</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.RolesList)
                                {
                                    <tr>
                                        <td>@item.RoleTitle</td>
                                        <td>
                                            <a asp-page="EditRole" asp-route-id="@item.RoleId" class="btn btn-sm btn-warning"><i class="uil uil-edit"></i></a>
                                            <a asp-page="DeleteRole" asp-route-id="@item.RoleId" class="btn btn-sm btn-danger"><i class="uil uil-trash-alt"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>