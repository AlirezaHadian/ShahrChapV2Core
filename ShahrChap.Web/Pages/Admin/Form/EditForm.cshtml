<!-- jQuery & AJAX -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Show Form on Button Click
        $("#showFormBtn").click(function () {
            $("#dynamicForm").fadeIn();
        });

        // Toggle Extra Dropdown Visibility
        $("#toggleDropdown").change(function () {
            if ($(this).is(":checked")) {
                $("#extraDropdownContainer").fadeIn();
            } else {
                $("#extraDropdownContainer").fadeOut();
            }
        });

        // AJAX Form Submission
        $("#dynamicForm").submit(function (e) {
            e.preventDefault();
            var text = $("#inputText").val();
            var type = $("#inputType").val();
            var extraOption = $("#toggleDropdown").is(":checked") ? $("#extraDropdown").val() : "";

            $.post("/Admin/DynamicForm?handler=Create", { text: text, type: type, extraOption: extraOption }, function (data) {
                $("#itemsTableBody").append(data);
                $("#dynamicForm")[0].reset();
            });
        });

        // AJAX Delete Item
        $(document).on("click", ".deleteBtn", function () {
            var id = $(this).data("id");
            $.post("/Admin/DynamicForm?handler=Delete", { id: id }, function () {
                $("#row_" + id).fadeOut();
            });
        });
    });
</script>