@page "{id}"
@using ShahrChap.Core.Convertors
@model ShahrChap.Web.Pages.Admin.Users.DeleteUserModel
@{
    ViewData["Title"] = "- حذف کاربر";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb p-2">
                    <li class="breadcrumb-item"><a href="/Admin"><i class="uil uil-estate"></i> صفحه نخست</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Users"><i class="uil uil-users-alt"></i> لیست کاربران</a></li>
                    <li class="breadcrumb-item active text-danger" aria-current="page"><i class="uil uil-user-minus"></i> حذف @Model.InformationUserViewModel.UserName</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card border-danger shadow-lg">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0"><i class="uil uil-exclamation-triangle"></i> حذف کاربر "@Model.InformationUserViewModel.UserName"</h5>
        </div>
        <div class="card-body">
            <p class="text-muted">آیا از حذف این کاربر مطمئن هستید؟</p>

            <ul class="list-group mb-3">
                <li class="list-group-item"><strong>نام کاربری:</strong> @Model.InformationUserViewModel.UserName</li>
                @if (Model.InformationUserViewModel.Phone != null)
                {
                    <li class="list-group-item"><strong>شماره موبایل:</strong> @Model.InformationUserViewModel.Phone</li>
                }
                @if (Model.InformationUserViewModel.Email != null)
                {
                    <li class="list-group-item"><strong>ایمیل:</strong> @Model.InformationUserViewModel.Email</li>
                }
                <li class="list-group-item"><strong>موجودی:</strong> @Model.InformationUserViewModel.Wallet تومان</li>
                <li class="list-group-item"><strong>تاریخ عضویت:</strong> @Model.InformationUserViewModel.RegisterDate.ToShamsi()</li>
            </ul>

            <form method="post">
                <input type="hidden" name="userId" value="@ViewData["UserId"].ToString()" />
                <div class="d-flex justify-content-between">
                    <a href="/Admin/Users" class="btn btn-light border"><i class="uil uil-angle-right"></i> بازگشت</a>
                    <button type="submit" class="btn btn-danger"><i class="uil uil-user-minus"></i> حذف کاربر</button>
                </div>
            </form>
        </div>
    </div>
</div>