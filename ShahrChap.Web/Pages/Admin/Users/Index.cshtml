@page
@using ShahrChap.Core.Convertors
@model ShahrChap.Web.Pages.Admin.Users.Index
@{
    ViewData["Title"] = "مدیریت کاربران";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست کاربران سایت</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row" style="margin-bottom:.5rem">
                            <form>

                                <div class="col-sm-5 col-md-5">
                                    <input type="text" name="filterUser" class="form-control" placeholder="جستجو..." />
                                </div>
                                <div class="col-sm-4 col-md-4">
                                    <button type="submit" class="btn btn btn-success"><i class="uil uil-search"></i></button>
                                    <a href="/Admin/Users/" class="btn btn btn-outline btn-danger"><i class="uil uil-times"></i></a>
                                </div>
                            </form>
                        </div>
                        <div class="row">
                            <div class="col-md-12" style="margin-bottom:1rem">
                                <a asp-page="CreateUser" class="btn btn-outline btn-success"><i class="uil uil-user-plus"></i> افزودن شخص جدید</a>
                            </div>
                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info" style="text-align:center;vertical-align:central;">
                            <thead>
                                <tr>
                                    <td>نام کاربری</td>
                                    <td>ایمیل</td>
                                    <td>شماره موبایل</td>
                                    <td>تاریخ ثبت نام</td>
                                    <td>دستورات</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.UserForAdminViewModel.Users)
                                {
                                    <tr>
                                        <td>@item.UserName</td>
                                        <td>
                                            @if(item.Email != null)
                                            {
                                                @item.Email
                                                @if (item.IsEmailActive)
                                                {
                                                    <span class="badge rounded-pill text-bg-success">فعال</span>
                                                }
                                                else
                                                {
                                                    <span class="badge rounded-pill text-bg-danger">غیرفعال</span>
                                                }
                                            }
                                            else
                                            {
                                                <p>ایمیلی ثبت نشده است</p>
                                            }

                                        </td>
                                        <td>
                                            @if (item.Phone != null)
                                            {
                                                @item.Phone
                                                @if (item.IsPhoneActive)
                                                {
                                                    <span class="badge rounded-pill text-bg-success">فعال</span>
                                                }
                                                else
                                                {
                                                    <span class="badge rounded-pill text-bg-danger">غیرفعال</span>
                                                }
                                            }
                                            else
                                            {
                                                <p>شماره موبایلی ثبت نشده است</p>
                                            }

                                        </td>
                                        <td>@item.RegisterDate.ToShamsi()</td>
                                        <td>
                                            <a asp-page="UserAddresses" asp-route-id="@item.UserId" class="btn btn-sm btn-info"><i class="uil uil-location-point"></i></a>
                                            @* <a asp-page="" asp-route-id="" class="btn btn-sm btn-primary"><i class="uil uil-key-"></i></a> *@
                                            <a asp-page="EditUser" asp-route-id="@item.UserId" class="btn btn-sm btn-warning"><i class="uil uil-edit"></i></a>
                                            <a asp-page="DeleteUser" asp-route-id="@item.UserId" class="btn btn-sm btn-danger"><i class="uil uil-trash-alt"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                    <ul class="pagination">
                                        @for (int i = 1; i <= Model.UserForAdminViewModel.PageCount; i++)
                                        {
                                            <li class="paginate_button @((i==Model.UserForAdminViewModel.CurrentPage)?"active":"")" aria-controls="dataTables-example" tabindex="0">
                                                <a href="/Admin/Users?PageId=@i">@i</a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>