@using ShahrChap.Core.Convertors
@model ShahrChap.Core.DTOs.InformationUserViewModel
@{
    ViewData["Title"] = "پنل کاربری " + @User.Identity.Name;
}

<section class="container internal-style pt-3">
    <ol class="breadcrumb drop-shadow">
        <li class="breadcrumb-item"><a href="/">خانه</a></li>
        <li class="breadcrumb-item active" aria-current="page">پنل کاربری</li>
    </ol>
</section>

<section class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar"/>
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content  drop-shadow">
                        <header>
                            <h1> داشبورد </h1>
                        </header>
                        <div class="inner">
                            <div class="account-information">
                                <h3> اطلاعات کاربری </h3>
                                <ul>
                                    <li> <i class="uil uil-user"></i> نام کاربری : @Model.UserName </li>
                                    <li> <i class="uil uil-envelope"></i> ایمیل :
                                        @if (Model.Email != null)
                                        {
                                            @Model.Email
                                        }
                                        else
                                        {
                                            <span class="text-red">ایمیلی ثبت نشده است</span>
                                        }
                                    </li>
                                    <li> <i class="uil uil-mobile-android"></i> شماره تماس :
                                        @if (Model.Phone != null)
                                        {
                                            @Model.Phone
                                        }
                                        else
                                        {
                                        <span class="text-red">شماره موبایلی ثبت نشده است</span>
                                        }
                                    </li>
                                    <li> <i class="uil uil-calender"></i> تاریخ عضویت : @Model.RegisterDate.ToShamsi() </li>
                                    <li> <i class="uil uil-wallet"></i> کیف پول : @Model.Wallet </li>
                                 </ul>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </section>