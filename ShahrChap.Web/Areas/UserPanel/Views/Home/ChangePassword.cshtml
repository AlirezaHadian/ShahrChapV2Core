@model ShahrChap.Core.DTOs.ChangePasswordViewModel

@{
    ViewData["Title"] = "تغییر کلمه عبور";
}
@if(ViewBag.ToastrMessage != ""){
<partial name="_ToastrAlert" />
}

<section class="container internal-style pt-3">
    <ol class="breadcrumb drop-shadow">
        <li class="breadcrumb-item"><a href="/">خانه</a></li>
        <li class="breadcrumb-item active" aria-current="page">تغییر کلمه عبور</li>
    </ol>
</section>

<section class="container">
    <div class="user-account">
        <div class="row">
            <partial name="_SideBar"/>
            <div class="col-md-9 col-sm-8 col-xs-12">
                <section class="user-account-content  drop-shadow">
                    <header>
                        <h1> داشبورد </h1>
                    </header>
                    <div class="inner">
                        <div class="account-information">
                            <form asp-action="ChangePassword" method="post">
                                <div class="row">
                                    <div class="col-md-8 col-sm-12 col-xs-12">
                                        <div class="col-md-7 col-sm-10 col-xs-12">
                                            <div class="input-group">
                                                <i class="icon uil uil-padlock"></i>
                                                <input type="password" asp-for="oldPassword" class="form-control" placeholder="کلمه عبور فعلی">
                                            </div>
                                            <span class="txt-red" asp-validation-for="oldPassword"></span>
                                        </div>
      
                                        <div class="col-md-7 col-sm-10 col-xs-12">
                                            <div class="input-group">
                                                <i class="icon uil uil-padlock"></i>
                                                <input type="password" asp-for="newPassword" class="form-control" placeholder="کلمه عبور جدید">
                                            </div>
                                            <span class="txt-red" asp-validation-for="newPassword"></span>
                                        </div>
                                        <div class="col-md-7 col-sm-10 col-xs-12">
                                            <div class="input-group">
                                                <i class="icon uil uil-padlock"></i>
                                                <input type="password" asp-for="confirmNewPassword" class="form-control" placeholder="تکرار کلمه عبور جدید">
                                            </div>
                                            <span class="txt-red" asp-validation-for="confirmNewPassword"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-7 col-sm-10 col-xs-12 mt-3">
                                        <div class="input-group">
                                            <button class="btn btn-blue">
                                                <i class="uil uil-file-edit-alt"></i>
                                                ثبت </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>