@if (ViewBag.ToastrMessage != null)
{
    if (ViewBag.ToastrType == "Success")
    {
        <script type="text/javascript">
            $(document).ready(function () {
                toastr.success('@ViewBag.ToastrMessage', '@ViewBag.ToastrTitle');
            });
        </script>
    }
    else
    {
        <script type="text/javascript">
            $(document).ready(function () {
                toastr.success('@ViewBag.ToastrMessage');
            });
        </script> 
    }

}

